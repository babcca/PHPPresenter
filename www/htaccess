RewriteEngine On
# pristup k vsem css, js souborum
RewriteCond %{REQUEST_URI} !\.css$
RewriteCond %{REQUEST_URI} !\.js$
RewriteCond %{REQUEST_URI} !\.php$ 
# spousteni php
# pristup do slozky img/<cokoliv>.<cokoliv>
RewriteCond %{REQUEST_URI} !img/(.*)\.
# Jinak si zpracuj 
RewriteRule ^(.*)$ index.php?page=$1&%{QUERY_STRING} [NC]